<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="selectableItemBackground">@drawable/primary_selector</item>
        <item name="android:selectableItemBackground">@drawable/primary_selector</item>
        <!-- for the following two, you shoud use a different ripple without mask -->
        <item name="selectableItemBackgroundBorderless">@drawable/primary_selector</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <!--    <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>-->
        <item name="android:typeface">serif</item>
        <item name="android:background">@android:color/transparent
        </item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.AppBarOverlayWhite" parent="ThemeOverlay.AppCompat.Dark">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BlackNoBarsTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- <style name="ButtonPrimaryStyle" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>
-->
    <style name="ListItemPrimaryStyle" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="ButtonBlackStyle" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/black_round_corner_button</item>
    </style>

    <style name="ButtonSecondaryStyle" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_80</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        //added attributes
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextAppearence.App.TextInputLayoutGrey" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="EditTextWhiteStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lines">1</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="EditTextGrayStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray_700</item>
        <item name="colorControlNormal">@color/gray_700</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="userRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/starbar_drawable</item>
    </style>

    <style name="BrandedCheckBox" parent="AppTheme">
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>
