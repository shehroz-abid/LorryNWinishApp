<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <Button
        android:id="@+id/pickthislocationBtn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:text="Next"
        android:background="@drawable/black_round"
        />

    <Button
        android:id="@+id/pickthislocationCancelBtn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:text="Cancel"
        android:background="@drawable/black_round"
        />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/requestRideBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Request Ride"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        />
    <RelativeLayout
        android:id="@+id/estimatedTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/requestRideBtn"
        android:visibility="gone"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/estimatedPickuptime_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Estimated Pickup Time: 4 Mins"
            android:background="#f2f2f2"
            android:textColor="@color/black_80"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/estimatedPickuptime_tv"
            >
            <View
                android:id="@+id/centerline1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black_30"
                android:layout_centerInParent="true"
                />
            <RelativeLayout
                android:id="@+id/priceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/centerline1"
                >

                <View
                    android:id="@+id/centerline2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/priceValue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/centerline2"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:text="$28.99"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="2dp"
                    />

                <TextView
                    android:id="@+id/pricelabel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/centerline2"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="FARE ESTIMATE"
                    android:layout_marginTop="2dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/promoCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/centerline1"
                >

                <View
                    android:id="@+id/centerline3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/promoStatus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/centerline3"
                    android:layout_centerHorizontal="true"
                    android:text="Applied"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="2dp"
                    />

                <TextView
                    android:id="@+id/promolabel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/centerline3"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="PROMO CODE"
                    android:layout_marginTop="2dp"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/mylocation_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/mylocation"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/estimatedTimeLayout"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pickupAddressLayout"
        >
        <RelativeLayout
            android:id="@+id/pickup_address_rl"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <ImageView
                android:id="@+id/pickupIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/green_dot"
                />

            <ImageView
                android:id="@+id/searchimg"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_search_black_24dp"
                />
            <TextView
                android:id="@+id/firstAddress_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="Historical Library and Museum"
                android:layout_toLeftOf="@+id/searchimg"
                android:layout_toRightOf="@+id/pickupIndicator"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                />
            <TextView
                android:id="@+id/pickup_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:layout_below="@+id/firstAddress_lbl"
                android:layout_centerHorizontal="true"
                android:text="Ma Tau Wai, Kowloon"
                android:textSize="13sp"
                android:textColor="@color/black_80"
                android:layout_toLeftOf="@+id/searchimg"
                android:layout_toRightOf="@+id/pickupIndicator"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pickupAndDestinationLayout"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/pickup1_address_rl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                >

                <ImageView
                    android:id="@+id/indicator1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/green_dot"
                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/indicator1"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/dotted"
                    />

                <ImageView
                    android:id="@+id/addimg1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:tint="@color/black_80"
                    />
                <TextView
                    android:id="@+id/pickupAddress1_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="12sp"
                    android:text="Pickup Location"
                    android:layout_toLeftOf="@+id/addimg1"
                    android:layout_toRightOf="@+id/indicator1"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="5dp"
                    />
                <TextView
                    android:id="@+id/pickup1_address_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_below="@+id/pickupAddress1_lbl"
                    android:layout_centerHorizontal="true"
                    android:text="Historical Library and Museum"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/addimg1"
                    android:layout_toRightOf="@+id/indicator1"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/destination_address_rl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/pickup1_address_rl"
                >

                <ImageView
                    android:id="@+id/indicator2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:tint="@android:color/holo_green_dark"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/indicator2"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/dotted"
                    />

                <ImageView
                    android:id="@+id/crossimg1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:tint="@color/black_80"
                    />
                <TextView
                    android:id="@+id/destinationAddress1_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black_80"
                    android:textSize="12sp"
                    android:text="Destination Location"
                    android:layout_toLeftOf="@+id/crossimg1"
                    android:layout_toRightOf="@+id/indicator2"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="5dp"
                    />
                <TextView
                    android:id="@+id/destination1_address_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_below="@+id/destinationAddress1_lbl"
                    android:layout_centerHorizontal="true"
                    android:text="Historical Library and Museum"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@+id/crossimg1"
                    android:layout_toRightOf="@+id/indicator2"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="5dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
