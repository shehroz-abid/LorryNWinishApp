<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llHeader_SignUpLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/secondry_selector"
        android:orientation="vertical"
        android:visibility="visible">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_vertical"
                />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_profile_iv"
            android:layout_marginLeft="14dp"
            >

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="Vanessa Donovan"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_marginTop="6dp"
                android:lines="1"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/user_name_tv"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_brightness_5_black_24dp"
                android:tint="@android:color/white"
                />
            <TextView
                android:id="@+id/phone_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_tv"
                android:layout_marginTop="6dp"
                android:text="+204979137"
                android:textColor="@android:color/white"

                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
