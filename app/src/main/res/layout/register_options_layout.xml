<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/black_round"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerInParent="true"
        >

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Login"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/login_tv"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_reg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/black_round"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/layout_login"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/create_acc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Create Account"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/create_acc_tv"
            android:layout_marginRight="16dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_fbLogin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/black_round"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layout_login"
        >
        <TextView
            android:id="@+id/fb_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Login"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/fb_login_tv"
            android:layout_marginRight="16dp"
            />

    </RelativeLayout>

</RelativeLayout>
