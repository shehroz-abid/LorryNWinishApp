<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:id="@+id/selectDate_edittxt"
        android:drawableRight="@drawable/calendar_icon"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Time"
        android:id="@+id/selectTime_edittxt"
        android:drawableRight="@drawable/time_icon"/>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_Timepicker">

    </TimePicker>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Arrival time may vary to 30 min according to traffic and road condition"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="#FFFFFF"
        android:weightSum="10">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:textColor="#FFFFFF"
            android:background="@drawable/big_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:textColor="#FFFFFF"
            android:background="@drawable/big_button"/>


    </LinearLayout>

</LinearLayout>