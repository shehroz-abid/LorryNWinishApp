<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnEnableGPS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/enable_gps"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/gps_bgImg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/gps_bg"
        />

    <TextView
        android:id="@+id/location_servicesLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gps_bgImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Location Services"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_servicesLbl"
        android:layout_centerHorizontal="true"
        android:text="Please enable GPS in order to continue using the app"
        android:textSize="10sp"
        android:gravity="center"
        />

</RelativeLayout>
